<h1>Listing hotels</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Numeroquartos</th>
      <th>Numeropessoas</th>
      <th>Destino</th>
      <th>Dataentrada</th>
      <th>Datasaida</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hotels.each do |hotel| %>
      <tr>
        <td><%= hotel.name %></td>
        <td><%= hotel.numeroquartos %></td>
        <td><%= hotel.numeropessoas %></td>
        <td><%= hotel.destino %></td>
        <td><%= hotel.dataentrada %></td>
        <td><%= hotel.datasaida %></td>
        <td><%= hotel.price %></td>
        <td><%= link_to 'Show', hotel %></td>
        <td><%= link_to 'Edit', edit_hotel_path(hotel) %></td>
        <td><%= link_to 'Destroy', hotel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

