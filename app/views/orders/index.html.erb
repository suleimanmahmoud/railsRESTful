<h1>Listing orders</h1>

<table>
  <thead>
    <tr>
      <th>Numeroquartos</th>
      <th>Numeropessoas</th>
      <th>Compradorname</th>
      <th>Creditonumber</th>
      <th>Creditocod</th>
      <th>Creditovalidade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.numeroquartos %></td>
        <td><%= order.numeropessoas %></td>
        <td><%= order.compradorname %></td>
        <td><%= order.creditonumber %></td>
        <td><%= order.creditocod %></td>
        <td><%= order.creditovalidade %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

