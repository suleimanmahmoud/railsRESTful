<h1>Listagem das Ordens</h1>

<table>
  <thead>
    <tr>
      <th>Numero de Quartos</th>
      <th>Numero de Pessoas</th>
      <th>Nome Comprador</th>
      <th>Cartao de Credito</th>
      <th>Cod Seguran√ßa</th>
      <th>Validade</th>
      <th>Valor</th>
      <th>Parcelas</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.numeroquartos %></td>
        <td><%= order.numeropessoas %></td>
        <td><%= order.compradorname %></td>
        <td><%= order.creditonumber %></td>
        <td><%= order.creditocod %></td>
        <td><%= order.creditovalidade %></td>
        <td><%= order.valor %></td>
        <td><%= order.parcelas %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

